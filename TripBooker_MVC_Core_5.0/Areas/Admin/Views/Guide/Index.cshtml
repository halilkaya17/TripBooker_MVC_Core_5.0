@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="card">
    <h5 class="card-header">Rehber Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Resim</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Düzenle</th>
                </tr>   
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{ count = count + 1;}
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                        <td><img src="@item.Image"style="height:100px ; width:100px ; border-radius:50%"/></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        @{
                            if (item.Status==true)
                            {
                                <td><a id="on" href="/Admin/Guide/ChangeToFalse/@item.GuideID/" class="btn btn-outline-danger">Pasif Yap</a></td>
                            }
                            else
                            {
                                <td><a id="off" href="/Admin/Guide/ChangeToTrue/@item.GuideID/" class="btn btn-outline-success">Aktif Yap</a></td>
                            }
                        }
                        <td><a href="/Admin/Guide/EditGuide/" class="btn btn-outline-primary">Düzenle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Girişi</a>
