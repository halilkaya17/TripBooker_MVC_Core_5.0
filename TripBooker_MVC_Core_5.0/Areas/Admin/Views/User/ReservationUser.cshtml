@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h5 class="card-header">Kullanıcılar</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Rota</th>
                    <th>Kişi Sayısı</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr> 
                        @{
                            sayac = sayac + 1;
                        }
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@sayac</strong></td>
                        <td>##@*@item.AppUser.Name @item.AppUser.Surname*@</td>
                        <td>@item.Destination.City</td>
                        <td>@item.PersonCount</td>
                        <td>@(((DateTime)item.ReservationDate).ToString("dd-MM-yyyy"))</td>
                        <td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>                  
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Login/SingUp/" class="btn btn-outline-primary">Yeni Kullanıcı Kaydı</a>


